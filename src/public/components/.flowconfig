[ignore]
/dist/
/coverage/

[include]

[libs]
<PROJECT_ROOT>../../flow-typed/

[options]

# Extensions
module.file_ext=.js
module.file_ext=.json
module.file_ext=.css
module.file_ext=.scss

# Stubs
module.name_mapper.extension='jpg' -> '<PROJECT_ROOT>../../flow-stubs/webpack-asset.js'
module.name_mapper.extension='scss' -> '<PROJECT_ROOT>../../flow-stubs/webpack-asset.js'

# Experimental ES7 Features
esproposal.class_static_fields=enable
esproposal.class_instance_fields=enable
esproposal.decorators=ignore

# Enable // $FlowFixMe and // $FlowIssue comments
# to disable flow on subsequent line
suppress_comment=\\(.\\|\n\\)*\\$FlowFixMe
suppress_comment=\\(.\\|\n\\)*\\$FlowIssue

[strict]
